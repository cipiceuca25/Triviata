			var host = location.hostname,
			port = location.port,
			path = '/faye';

			var client = new Faye.Client('http://' + host + (port ? ':' + port : '') + path);

			Master.init(client, $.getQueryParam("id"), JSON.parse(html.unescapeEntities('#{JSON.stringify(records)}')));
		});
